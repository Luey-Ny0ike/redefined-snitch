<%= form_with(model: assignment, local: true) do |form| %>
  <% if assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= form.label :level%>
  <%= collection_select(:assignment, :level_id, Level.all, :id, :name_with_state) %>
</div>

<div class="field">
  <%= form.label :subject%>
  <%= collection_select(:assignment, :subject_id, Subject.all, :id, :name_with_state) %>
</div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content, id: :assignment_content %>
  </div>

  <div class="field">
    <%= form.label :due_date %>
    <%= form.datetime_local_field :due_date, id: :assignment_due_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
