<%= form_with(model: student, local: true) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :student_name %>
  </div>

  <div class="field">
    <%= form.label :admission_number %>
    <%= form.text_field :admission_number, id: :student_admission_number %>
  </div>

  <div class="field">
    <%= form.label :subjects %>
    <%= hidden_field_tag "subject_ids", :value => nil %>
    <%= collection_check_boxes(:student, :subject_ids, Subject.all, :id, :name_with_state, include_hidden: false) %>
  </div>
  <div class="field">
    <%= form.label :Dormitory %>
    <%= collection_select(:student, :dormitory_id, Dormitory.all, :id, :name_with_state) %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
